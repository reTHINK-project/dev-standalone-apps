<?xml version='1.0' encoding='utf-8'?>
<widget id="eu.rethink.demos" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>My Bracelet</name>
    <description>
        Bracelet Sensor Reporter App
    </description>
    <author email="lduarte.suil@gmail.com" href="http://www.alticelabs.com">
        Altice TEAM
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <hook src="hooks/appBeforePrepare.js" type="before_prepare" />
    <icon src="rethink.png" />
</widget>
